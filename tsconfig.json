{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@scripts/*": ["src/scripts/*"],
      "@content/*": ["src/content/*"],
      "@schemas/*": ["src/schemas/*"],
      "@taia/*": ["vendor/taia-core/src/*"]
    },
    "verbatimModuleSyntax": false,
    "skipLibCheck": true
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", "node_modules", "vendor/taia-core/node_modules"]
}
