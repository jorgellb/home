{
  "name": "platanitorico-web",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "build:full": "npm run validate:content && npm run check:links && astro build",
    "preview": "astro preview",
    "check": "astro check && tsc --noEmit",
    "lint": "eslint . --ext .ts,.astro,.js",
    "lint:fix": "eslint . --ext .ts,.astro,.js --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate:content": "tsx src/scripts/validate.ts",
    "check:links": "tsx src/scripts/link-checker.ts",
    "lighthouse": "tsx src/scripts/lighthouse.ts",
    "test:all": "npm run check && npm run validate:content && npm run check:links && npm run build && npm run lighthouse",
    "taia:validate": "tsx src/scripts/validate.ts",
    "taia:links": "tsx src/scripts/link-checker.ts",
    "taia:lighthouse": "tsx src/scripts/lighthouse.ts"
  },
  "dependencies": {
    "@astrojs/netlify": "^6.6.4",
    "@astrojs/sitemap": "^3.7.0",
    "@astrojs/tailwind": "^6.0.2",
    "@studio-freight/lenis": "^1.0.42",
    "astro": "^5.17.1",
    "gray-matter": "^4.0.3",
    "gsap": "^3.14.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "autoprefixer": "^10.4.23",
    "axe-core": "^4.11.1",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "lighthouse": "^13.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
