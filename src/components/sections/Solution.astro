    gradient: "from-amber-400 via-orange-500 to-amber-500",
    stats: { value: "100%", label: "exclusivo" }
  },
  {
    id: "support",
    icon: "support",
    title: "Mantenimiento & Hosting",
    description: "Tu web siempre segura, rápida y actualizada. Soporte técnico cuando lo necesites sin preocupaciones.",
    features: ["Mantenimiento mensual completo", "Hosting Premium incluido", "Copias de seguridad diarias", "Soporte técnico 24/7", "Actualizaciones incluidas"],
    link: "/soporte",
    gradient: "from-orange-500 via-amber-400 to-orange-500",
    stats: { value: "99.9%", label: "uptime" }
