  code: `<svg class="w-full h-full" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg>`,
  video: `<svg class="w-full h-full" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M23 7l-7 5 7 5V7z"/><rect x="1" y="5" width="15" height="14" rx="2" ry="2"/></svg>`,
  marketing: `<svg class="w-full h-full" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20v-6M6 20V10M18 20V4M3 20h18"/></svg>`,
  palette: `<svg class="w-full h-full" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="13.5" cy="6.5" r="2.5"/><path d="M13.5 9c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2"/><path d="M4 20h14a3 3 0 0 0 3-3c0-4.418-4.03-8-9-8s-9 3.582-9 8v3"/></svg>`,
  support: `<svg class="w-full h-full" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>`
};
---

<section class="relative py-24 lg:py-32 overflow-hidden" id="servicios">
  <!-- Static Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-white via-orange-50/40 to-white"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_rgba(255,107,0,0.08)_0%,transparent_50%),radial-gradient(ellipse_at_bottom_left,_rgba(255,165,0,0.06)_0%,transparent_50%)]"></div>
  
  <!-- Static Orbs (sin animación) -->
  <div class="absolute top-20 right-20 w-[400px] h-[400px] bg-gradient-to-br from-orange-400/15 to-amber-400/10 rounded-full blur-[100px]"></div>
  <div class="absolute bottom-20 left-10 w-[500px] h-[500px] bg-gradient-to-br from-amber-400/10 to-orange-400/5 rounded-full blur-[120px]"></div>
  
  <div class="relative max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white border border-orange-200 shadow-lg shadow-orange-500/10 mb-8">
        <span class="w-2 h-2 rounded-full bg-orange-500"></span>
        <span class="text-sm font-bold text-orange-700 uppercase tracking-wider">Servicios Premium</span>
      </div>
      
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 mb-6">
        Soluciones para
        <span class="block mt-2 bg-gradient-to-r from-orange-500 via-amber-500 to-orange-600 bg-clip-text text-transparent">
          impulsar tu negocio
        </span>
      </h2>
      
      <p class="text-lg md:text-xl text-slate-500 max-w-3xl mx-auto leading-relaxed">
        Todo lo que necesitas para <span class="text-orange-600 font-semibold">crear</span>, 
        <span class="text-amber-600 font-semibold">crecer</span> y 
        <span class="text-orange-600 font-semibold">destacar</span> en el mundo digital
      </p>
    </div>
    
    <!-- Services Grid - Optimized Cards -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {services.map((service) => (
        <a 
          href={service.link}
          class="group relative bg-white rounded-2xl border border-slate-200 overflow-hidden transition-all duration-300 hover:border-orange-300 hover:shadow-xl hover:shadow-orange-500/10 hover:-translate-y-1"
        >
          {/* Gradient Top Line */}
          <div class={`absolute top-0 left-0 right-0 h-1 bg-gradient-to-r ${service.gradient} transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left`}></div>
          
          <div class="relative p-6 lg:p-8">
            {/* Icon Section */}
            <div class="flex items-start justify-between mb-6">
              <div class="relative">
                <div class={`w-14 h-14 rounded-xl bg-gradient-to-br ${service.gradient} p-[2px] flex-shrink-0 group-hover:scale-105 transition-transform duration-300 shadow-lg shadow-orange-500/20`}>
                  <div class="w-full h-full rounded-[10px] bg-slate-900 flex items-center justify-center">
                    <div class="w-7 h-7 text-white" set:html={icons[service.icon]} />
                  </div>
                </div>
              </div>
              
              {/* Stats Badge */}
              <div class="flex flex-col items-end">
                <span class="text-2xl font-bold bg-gradient-to-r from-orange-500 to-amber-500 bg-clip-text text-transparent">
                  {service.stats.value}
                </span>
                <span class="text-xs text-slate-400 uppercase tracking-wide">{service.stats.label}</span>
              </div>
            </div>
            
            {/* Title & Description */}
            <h3 class="text-xl lg:text-2xl font-bold text-slate-900 mb-3 group-hover:text-orange-600 transition-colors">
              {service.title}
            </h3>
            <p class="text-slate-500 mb-6 leading-relaxed text-sm lg:text-base">
              {service.description}
            </p>
            
            {/* Features */}
            <ul class="space-y-3 mb-8">
              {service.features.map((feature) => (
                <li class="flex items-center gap-3 text-sm text-slate-600">
                  <svg class="w-5 h-5 text-orange-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            
            {/* CTA Button */}
            <div class={`w-full inline-flex items-center justify-center gap-2 px-6 py-3.5 rounded-lg bg-slate-900 text-white font-semibold transition-all duration-300 group-hover:bg-gradient-to-r ${service.gradient}`}>
              <span>Ver Servicio</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
    
    {/* Bottom CTA */}
    <div class="mt-16 text-center">
      <div class="relative inline-flex flex-col lg:flex-row items-center gap-6 lg:gap-10 p-8 lg:p-10 rounded-2xl bg-white border border-orange-200 shadow-xl shadow-orange-500/10">
        <div class="flex items-center gap-5">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-orange-500 to-amber-500 flex items-center justify-center shadow-lg">
            <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <div class="text-left">
            <p class="text-xl font-bold text-slate-900">¿No sabes por dónde empezar?</p>
            <p class="text-slate-500">Te asesoramos gratis</p>
          </div>
        </div>
        
        <a href="/contacto" class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-orange-500 to-amber-500 text-white font-bold rounded-full hover:shadow-lg hover:shadow-orange-500/30 transition-all duration-300 hover:-translate-y-0.5">
          Consulta Gratis
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
