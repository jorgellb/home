---
// Portfolio Section - SEO Optimized with Real Images
interface Project {
  id: string;
  name: string;
  description: string;
  category: string;
  url: string;
  image: string;
  gradient: string;
  tags: string[];
}

const projects: Project[] = [
  {
    id: 'clinica-koral',
    name: 'Clinica Dental Koral',
    description: 'Clínica dental en Vera con diseño web premium, SEO multiidioma y sistema de citas online. Tecnología de vanguardia para una experiencia dental moderna.',
    category: 'Diseño Web + SEO',
    url: 'https://clinicadentalkoral.es/',
    image: '/images/portfolio/clinica-koral.jpg',
    gradient: 'from-emerald-500 to-teal-600',
    tags: ['WordPress', 'SEO', 'Multiidioma']
  },
  {
    id: 'murcia-production',
    name: 'Murcia Production Service',
    description: 'Productora audiovisual especializada en rodajes cinematográficos en España. Web corporativa con portfolio de proyectos y servicios de producción.',
    category: 'Web Corporativa',
    url: 'https://murciaproductionservice.com/',
    image: '/images/portfolio/murcia-production.jpg',
    gradient: 'from-rose-500 to-pink-600',
    tags: ['Producción', 'Cine', 'Audiovisual']
  },
  {
    id: 'actualidad-almanzora',
    name: 'Actualidad Almanzora',
    description: 'Periódico digital líder del Levante de Almería. Portal de noticias con radio online, podcasts y cobertura local de cultura, agricultura y turismo.',
    category: 'Portal de Noticias',
    url: 'https://www.actualidadalmanzora.es/',
    image: '/images/portfolio/actualidad-almanzora.jpg',
    gradient: 'from-sky-500 to-blue-600',
    tags: ['Noticias', 'Radio', 'Podcast']
  },
  {
    id: 'oveja-bohemia',
    name: 'Oveja Bohemia',
    description: 'Tienda online de ropa y complementos con diseño bohemio. E-commerce desarrollado en Shopify con integración de pasarela de pagos y gestión de inventario automatizada.',
    category: 'E-commerce + Branding',
    url: 'https://ovejabohemia.com/',
    image: '/images/portfolio/oveja-bohemia.jpg',
    gradient: 'from-purple-500 to-violet-600',
    tags: ['Shopify', 'E-commerce', 'Branding']
  },
  {
    id: 'ysy',
    name: 'YSY',
    description: 'Plataforma de servicios de arquitectura e ingeniería. Desarrollo web a medida con optimización SEO técnica y diseño minimalista enfocado en la conversión.',
    category: 'Desarrollo Web + SEO',
    url: 'https://ysy.es/',
    image: '/images/portfolio/ysy.jpg',
    gradient: 'from-cyan-500 to-blue-500',
    tags: ['Next.js', 'SEO Técnico', 'Diseño UI/UX']
  },
  {
    id: 'metales-sureste',
    name: 'Metales del Sureste',
    description: 'Empresa líder en gestión de residuos metálicos. Web corporativa con catálogo de servicios, blog de noticias y sistema de contacto para recogidas industriales.',
    category: 'Web Corporativa',
    url: 'https://metalesdelsureste.com/',
    image: '/images/portfolio/metales-sureste.jpg',
    gradient: 'from-orange-500 to-red-600',
    tags: ['WordPress', 'SEO Local', 'B2B']
  }
];
---

<section class="relative py-28 overflow-hidden" id="portfolio">
  <!-- Background -->
  <div class="absolute inset-0 bg-[linear-gradient(rgba(0,0,0,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(0,0,0,0.03)_1px,transparent_1px)] bg-[size:64px_64px]"></div>
  
  <!-- Glow Orbs -->
  <div class="absolute top-0 left-1/4 w-[600px] h-[600px] bg-orange-500/5 rounded-full blur-[150px]"></div>
  <div class="absolute bottom-0 right-1/4 w-[500px] h-[500px] bg-orange-500/5 rounded-full blur-[150px]"></div>
  
  <div class="relative max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white border border-slate-200 text-sm text-slate-500 mb-8">
        <svg class="w-4 h-4 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Proyectos destacados
      </span>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 mb-6">
        Nuestro 
        <span class="text-gradient">Portfolio</span>
      </h2>
      <p class="text-lg md:text-xl text-slate-500 max-w-2xl mx-auto">
        Proyectos reales que generan resultados. Cada web está diseñada para convertir visitantes en clientes.
      </p>
    </div>
    
    <!-- Portfolio Grid -->
    <div class="grid lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <article 
          class="group relative rounded-3xl bg-white border border-slate-200 overflow-hidden hover:border-slate-300 transition-all duration-700"
        >
          {/* Image Container with Real Image */}
          <a 
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="relative block aspect-[16/10] overflow-hidden group/image"
            aria-label={`Ver proyecto ${project.name}`}
          >
            {/* Real Image with lazy loading */}
            <img
              src={project.image}
              alt={`Captura de pantalla de ${project.name} - ${project.category}`}
              loading={index === 0 ? "eager" : "lazy"}
              decoding={index === 0 ? "sync" : "async"}
              class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover/image:scale-105"
              onerror="this.style.display='none'"
            />
            
            {/* Fallback Gradient Background */}
            <div class={`absolute inset-0 bg-gradient-to-br ${project.gradient} opacity-10`}></div>
            
            {/* Browser Mockup Overlay */}
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="w-[90%] h-[80%] rounded-xl overflow-hidden bg-slate-100 border border-slate-200 shadow-2xl">
                {/* Browser Header */}
                <div class="flex items-center gap-2 px-3 py-2 bg-slate-200 border-b border-slate-200">
                  <div class="flex gap-1.5">
                    <span class="w-2.5 h-2.5 rounded-full bg-red-500/80"></span>
                    <span class="w-2.5 h-2.5 rounded-full bg-yellow-500/80"></span>
                    <span class="w-2.5 h-2.5 rounded-full bg-orange-500/80"></span>
                  </div>
                  <div class="flex-1 mx-2">
                    <div class="flex items-center justify-center gap-1 px-2 py-0.5 rounded bg-slate-300/50 text-[10px] text-slate-500">
                      <svg class="w-2.5 h-2.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                      </svg>
                      <span class="truncate">{project.url.replace('https://', '').replace('www.', '').slice(0, -1)}</span>
                    </div>
                  </div>
                </div>
                
                {/* Website Content Preview */}
                <div class={`relative h-[calc(100%-32px)] bg-gradient-to-br ${project.gradient} opacity-30`}>
                  <div class="absolute inset-3 space-y-2">
                    <div class="h-6 w-24 bg-slate-200 rounded"></div>
                    <div class="h-3 w-40 bg-slate-100 rounded"></div>
                    <div class="h-3 w-32 bg-slate-100 rounded"></div>
                    <div class="mt-4 grid grid-cols-3 gap-2">
                      <div class="h-12 bg-slate-100 rounded"></div>
                      <div class="h-12 bg-slate-100 rounded"></div>
                      <div class="h-12 bg-slate-100 rounded"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            {/* Shine Effect */}
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover/image:translate-x-full transition-transform duration-1000"></div>
            
            {/* Floating Category Badge */}
            <div class="absolute top-4 right-4 z-10 transition-transform duration-300 group-hover/image:-translate-y-1">
              <span class={`px-3 py-1.5 rounded-full bg-gradient-to-r ${project.gradient} text-white text-xs font-semibold shadow-lg`}>
                {project.category}
              </span>
            </div>
            
            {/* View Overlay */}
            <div class="absolute inset-0 bg-slate-900/60 opacity-0 group-hover/image:opacity-100 transition-opacity duration-300 flex items-center justify-center">
              <span class="px-4 py-2 rounded-full bg-white text-slate-900 font-medium text-sm">
                Ver proyecto
              </span>
            </div>
          </a>
          
          {/* Content */}
          <div class="p-6 lg:p-8">
            {/* Project Name */}
            <h3 class="text-xl lg:text-2xl font-bold text-slate-900 mb-3 group-hover:text-orange-600 transition-colors duration-300">
              {project.name}
            </h3>
            
            {/* Description */}
            <p class="text-slate-500 text-sm leading-relaxed mb-5">
              {project.description}
            </p>
            
            {/* Tags */}
            <div class="flex flex-wrap gap-2 mb-6">
              {project.tags.map((tag) => (
                <span class="px-3 py-1 rounded-full bg-slate-50 border border-slate-200 text-xs text-slate-500">
                  {tag}
                </span>
              ))}
            </div>
            
            {/* CTA Button */}
            <a 
              href={project.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group/btn inline-flex items-center gap-2 text-slate-900 font-medium hover:text-orange-600 transition-colors duration-300"
            >
              <span>Ver proyecto</span>
              <svg class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
          
          {/* Hover Glow Effect */}
          <div class={`absolute -inset-px rounded-3xl bg-gradient-to-r ${project.gradient} opacity-0 group-hover:opacity-20 blur-xl transition-opacity duration-700 -z-10`}></div>
        </article>
      ))}
    </div>
    
    <!-- Stats Section -->
    <div class="mt-20 grid grid-cols-2 md:grid-cols-4 gap-6">
      <div class="text-center p-6 rounded-2xl bg-white border border-slate-200 hover:shadow-lg transition-shadow duration-300">
        <div class="text-3xl lg:text-4xl font-bold text-gradient mb-2">50+</div>
        <div class="text-sm text-slate-400">Proyectos entregados</div>
      </div>
      <div class="text-center p-6 rounded-2xl bg-white border border-slate-200 hover:shadow-lg transition-shadow duration-300">
        <div class="text-3xl lg:text-4xl font-bold text-gradient mb-2">100%</div>
        <div class="text-sm text-slate-400">Clientes satisfechos</div>
      </div>
      <div class="text-center p-6 rounded-2xl bg-white border border-slate-200 hover:shadow-lg transition-shadow duration-300">
        <div class="text-3xl lg:text-4xl font-bold text-gradient mb-2">5</div>
        <div class="text-sm text-slate-400">Años de experiencia</div>
      </div>
      <div class="text-center p-6 rounded-2xl bg-white border border-slate-200 hover:shadow-lg transition-shadow duration-300">
        <div class="text-3xl lg:text-4xl font-bold text-gradient mb-2">24h</div>
        <div class="text-sm text-slate-400">Tiempo de respuesta</div>
      </div>
    </div>
    
    <!-- CTA -->
    <div class="mt-16 text-center">
      <p class="text-slate-500 mb-6">
        ¿Quieres un proyecto como estos?
      </p>
      <a 
        href="/#contacto"
        class="group inline-flex items-center gap-3 px-8 py-4 rounded-full bg-gradient-to-r from-orange-500 to-amber-600 text-white font-semibold hover:shadow-lg hover:shadow-orange-500/30 hover:-translate-y-1 transition-all duration-300"
      >
        <span>Hablemos de tu proyecto</span>
        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
