---
// FAQ Section Component - Premium Light Theme with Enhanced Accordion
const faqs = [
  {
    question: '¿Cuánto tiempo tarda una web?',
    answer: 'Entre 1 y 2 semanas según la complejidad del proyecto. Proyectos simples pueden estar listos en una semana, mientras que webs más complejas pueden tardar hasta 2 semanas.',
    icon: 'clock'
  },
  {
    question: '¿Incluye dominio y hosting?',
    answer: 'El dominio lo contratas tú (recomendamos que sea tuyo para que tengas control total). El hosting está incluido gratis durante el primer año en todos nuestros planes.',
    icon: 'server'
  },
  {
    question: '¿Puedo gestionar la web yo mismo?',
    answer: 'Sí, absolutamente. Te entregamos todas las credenciales y documentación detallada para que puedas gestionar tu web de forma autónoma. También ofrecemos formación si la necesitas.',
    icon: 'user'
  },
  {
    question: '¿Ofrecen mantenimiento?',
    answer: 'Sí, ofrecemos planes de mantenimiento desde 50 EUR/mes que incluyen actualizaciones de seguridad, backups diarios, monitorización 24/7 y soporte prioritario.',
    icon: 'shield'
  },
  {
    question: '¿Qué formas de pago aceptan?',
    answer: 'Aceptamos transferencia bancaria, PayPal y tarjeta de crédito/débito. El proceso es simple: 50% al inicio del proyecto y 50% a la entrega final.',
    icon: 'card'
  },
  {
    question: '¿Qué pasa si no me gusta el resultado?',
    answer: 'Trabajamos con revisiones incluidas en cada plan. Si después de las revisiones no estás satisfecho, te devolvemos el 50% del primer pago. Nuestra prioridad es tu satisfacción.',
    icon: 'refresh'
  },
];

const iconPaths: Record<string, string> = {
  clock: 'M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z',
  server: 'M5.25 14.25h13.5m-13.5 0a3 3 0 01-3-3m3 3a3 3 0 100 6h13.5a3 3 0 100-6m-16.5-3a3 3 0 013-3h13.5a3 3 0 013 3m-19.5 0a4.5 4.5 0 01.9-2.7L5.737 5.1a3.375 3.375 0 012.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 01.9 2.7m0 0a3 3 0 01-3 3m0 3h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008zm-3 6h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008z',
  user: 'M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z',
  shield: 'M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z',
  card: 'M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z',
  refresh: 'M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99'
};
---

<section class="relative py-28 overflow-hidden" id="faq">
  <!-- Background -->
  <div class="absolute inset-0 bg-slate-50"></div>
  <div class="absolute inset-0 bg-[linear-gradient(rgba(0,0,0,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(0,0,0,0.03)_1px,transparent_1px)] bg-[size:64px_64px]"></div>
  
  <!-- Glow -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[400px] bg-orange-500/5 rounded-full blur-[150px]"></div>
  
  <div class="relative max-w-3xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white border border-slate-200 text-sm text-slate-500 mb-8 animate-fade-up">
        <svg class="w-4 h-4 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
        </svg>
        Resolvemos tus dudas
      </span>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 mb-6 animate-fade-up stagger-1">
        Preguntas 
        <span class="text-gradient">frecuentes</span>
      </h2>
      <p class="text-lg md:text-xl text-slate-500 animate-fade-up stagger-2">
        Todo lo que necesitas saber antes de empezar tu proyecto
      </p>
    </div>
    
    <!-- FAQ Accordion -->
    <div class="space-y-4">
      {faqs.map((faq, index) => (
        <details 
          class={`group rounded-2xl bg-white border border-slate-200 hover:border-orange-500/40 transition-all duration-500 overflow-hidden animate-fade-up stagger-${index + 3}`}
          open={index === 0}
        >
          <summary class="flex items-center gap-4 cursor-pointer p-6 list-none">
            <!-- Icon -->
            <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-orange-500/10 to-amber-500/10 flex items-center justify-center flex-shrink-0 group-open:from-orange-500 group-open:to-amber-600 transition-all duration-300">
              <svg class="w-5 h-5 text-orange-600 group-open:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[faq.icon]} />
              </svg>
            </div>
            
            <span class="font-semibold text-slate-900 text-lg flex-grow pr-4">{faq.question}</span>
            
            <!-- Chevron -->
            <span class="flex-shrink-0 w-8 h-8 rounded-full bg-slate-100 flex items-center justify-center group-open:bg-orange-500/20 transition-all duration-300">
              <svg 
                class="w-5 h-5 text-slate-500 group-open:text-orange-600 group-open:rotate-180 transition-all duration-300" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
                stroke-width="2"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
              </svg>
            </span>
          </summary>
          <div class="px-6 pb-6 pl-20">
            <p class="text-slate-500 leading-relaxed">
              {faq.answer}
            </p>
          </div>
        </details>
      ))}
    </div>
    
    <!-- Bottom CTA -->
    <div class="mt-16 text-center animate-fade-up">
      <div class="p-8 rounded-3xl bg-gradient-to-r from-orange-500/5 via-amber-500/5 to-orange-500/5 border border-orange-500/20">
        <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-orange-500 to-amber-600 p-0.5">
          <div class="w-full h-full rounded-[14px] bg-white flex items-center justify-center">
            <svg class="w-8 h-8 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 01-2.555-.337A5.972 5.972 0 015.41 20.97a5.969 5.969 0 01-.474-.065 4.48 4.48 0 00.978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25z" />
            </svg>
          </div>
        </div>
        <h3 class="text-xl font-bold text-slate-900 mb-2">
          ¿Tienes más preguntas?
        </h3>
        <p class="text-slate-500 mb-6">
          Estamos aquí para ayudarte. Respuesta en menos de 24 horas.
        </p>
        <a 
          href="/#contacto"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-slate-100 text-slate-900 font-semibold hover:bg-slate-200 transition-all duration-300 hover:-translate-y-1"
        >
          Contáctanos
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
