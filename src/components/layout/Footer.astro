---
// Footer Component - Electric Orange Theme
import { pueblos, comarcas, getPueblosByComarca, getPueblosDestacados } from '../../data/pueblos-almeria';

const currentYear = new Date().getFullYear();
const pueblosDestacados = getPueblosDestacados();
---

<footer class="relative pt-24 pb-8 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-white to-orange-50/30"></div>
  <div class="absolute inset-0 bg-[linear-gradient(rgba(255,107,0,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,107,0,0.02)_1px,transparent_1px)] bg-[size:64px_64px]"></div>
  
  <!-- Top Gradient Border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-orange-500/50 to-transparent"></div>
  
