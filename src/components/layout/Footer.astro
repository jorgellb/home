          <div 
            id="pueblo-dropdown-panel"
            class="absolute bottom-full left-0 right-0 mb-2 max-h-[400px] overflow-hidden rounded-2xl bg-white/95 backdrop-blur-xl border border-slate-200 shadow-2xl shadow-slate-200/50 opacity-0 invisible transform -translate-y-2 transition-all duration-300 z-50"
            role="listbox"
          >
            <div class="sticky top-0 p-3 bg-white/95 border-b border-slate-200">
              <div class="relative">
                <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
                </svg>
                <input 
                  type="text" 
                  id="pueblo-search"
                  placeholder="Escribe el nombre del pueblo..."
                  class="w-full pl-10 pr-4 py-3 rounded-xl bg-slate-50 border border-slate-200 text-slate-900 placeholder-slate-400 focus:outline-none focus:border-orange-500/50 transition-colors"
                />
              </div>
            </div>
            
            <div class="overflow-y-auto max-h-[320px] p-2" id="pueblos-list">
              <div class="mb-4">
                <div class="px-3 py-2 text-xs font-semibold text-orange-600 uppercase tracking-wider flex items-center gap-2">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                  </svg>
                  Localidades destacadas
                </div>
                <div class="space-y-1">
                  {pueblosDestacados.map((pueblo) => (
                    <a 
                      href={`/diseno-web/${pueblo.slug}`}
                      class="pueblo-item flex items-center gap-3 px-3 py-2.5 rounded-xl hover:bg-slate-50 transition-colors group"
                      data-nombre={pueblo.nombre.toLowerCase()}
                      data-comarca={pueblo.comarca.toLowerCase()}
                    >
                      <div class="w-8 h-8 rounded-lg bg-slate-900 flex items-center justify-center group-hover:bg-slate-800 transition-colors">
                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                        </svg>
                      </div>
                      <div class="flex-1 min-w-0">
                        <div class="text-slate-900 font-medium truncate group-hover:text-orange-600 transition-colors">{pueblo.nombre}</div>
                        <div class="text-xs text-slate-500 truncate">{pueblo.comarca}</div>
                      </div>
                      <svg class="w-4 h-4 text-slate-400 group-hover:text-orange-500 group-hover:translate-x-1 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  ))}
                </div>
              </div>
              
              {comarcas.map((comarca) => (
                <div class="mb-4 comarca-section" data-comarca={comarca.toLowerCase()}>
                  <div class="px-3 py-2 text-xs font-semibold text-slate-500 uppercase tracking-wider">
                    {comarca}
                  </div>
                  <div class="space-y-1">
                    {getPueblosByComarca(comarca).filter(p => !p.destacado).map((pueblo) => (
                      <a 
                        href={`/diseno-web/${pueblo.slug}`}
                        class="pueblo-item flex items-center gap-3 px-3 py-2.5 rounded-xl hover:bg-slate-50 transition-colors group"
                        data-nombre={pueblo.nombre.toLowerCase()}
                        data-comarca={pueblo.comarca.toLowerCase()}
                      >
                        <div class="w-8 h-8 rounded-lg bg-slate-900 flex items-center justify-center group-hover:bg-slate-800 transition-colors">
                          <svg class="w-4 h-4 text-white group-hover:text-orange-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                          </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                          <div class="text-slate-700 font-medium truncate group-hover:text-slate-900 transition-colors">{pueblo.nombre}</div>
                        </div>
                        <svg class="w-4 h-4 text-slate-400 group-hover:text-orange-500 group-hover:translate-x-1 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                        </svg>
                      </a>
                    ))}
                  </div>
                </div>
              ))}
              
              <div id="no-results" class="hidden px-4 py-8 text-center">
                <svg class="w-12 h-12 mx-auto text-slate-400 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
                <p class="text-slate-500">No se encontró ningún pueblo</p>
                <p class="text-sm text-slate-400 mt-1">Prueba con otro nombre</p>
              </div>
            </div>
            
            <div class="sticky bottom-0 px-4 py-3 bg-white/95 border-t border-slate-200">
              <p class="text-xs text-slate-500 text-center">
                <span class="text-orange-600 font-medium">{pueblos.length} pueblos</span> de la provincia de Almería
              </p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="flex flex-wrap gap-2">
        {pueblosDestacados.slice(0, 8).map((pueblo) => (
          <a 
            href={`/diseno-web/${pueblo.slug}`}
            class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-slate-100/50 border border-slate-200 text-xs text-slate-600 hover:text-slate-900 hover:border-orange-500/30 hover:bg-orange-500/10 transition-all duration-300"
          >
            <svg class="w-3 h-3 text-orange-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
            </svg>
            {pueblo.nombre}
          </a>
        ))}
        <button 
          type="button"
          id="ver-todos-btn"
          class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-orange-500/10 border border-orange-500/30 text-xs text-orange-600 hover:bg-orange-500/20 transition-all duration-300"
        >
          Ver todos
          <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-slate-200">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-slate-500 text-sm">
          &copy; {currentYear} Platanito Rico. Todos los derechos reservados.
        </p>
        <div class="flex items-center gap-6">
          <a href="/privacidad/" class="text-slate-500 text-sm hover:text-orange-600 transition-colors">
            Privacidad
          </a>
          <a href="/aviso-legal/" class="text-slate-500 text-sm hover:text-orange-600 transition-colors">
            Aviso Legal
          </a>
          <a href="/cookies/" class="text-slate-500 text-sm hover:text-orange-600 transition-colors">
            Cookies
          </a>
          <a href="/terminos-condiciones/" class="text-slate-500 text-sm hover:text-orange-600 transition-colors">
            Términos y Condiciones
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  const dropdownBtn = document.getElementById('pueblo-dropdown-btn');
  const dropdownPanel = document.getElementById('pueblo-dropdown-panel');
  const dropdownArrow = document.getElementById('dropdown-arrow');
  const searchInput = document.getElementById('pueblo-search') as HTMLInputElement;
  const puebloItems = document.querySelectorAll('.pueblo-item');
  const comarcaSections = document.querySelectorAll('.comarca-section');
  const noResults = document.getElementById('no-results');
  
  let isOpen = false;
  
  function toggleDropdown() {
    isOpen = !isOpen;
    
    if (isOpen) {
      dropdownPanel?.classList.remove('opacity-0', 'invisible', '-translate-y-2');
      dropdownPanel?.classList.add('opacity-100', 'visible', 'translate-y-0');
      dropdownArrow?.classList.add('rotate-180');
      dropdownBtn?.setAttribute('aria-expanded', 'true');
      setTimeout(() => searchInput?.focus(), 100);
    } else {
      dropdownPanel?.classList.add('opacity-0', 'invisible', '-translate-y-2');
      dropdownPanel?.classList.remove('opacity-100', 'visible', 'translate-y-0');
      dropdownArrow?.classList.remove('rotate-180');
      dropdownBtn?.setAttribute('aria-expanded', 'false');
    }
  }
  
  function closeDropdown() {
    if (isOpen) {
      isOpen = false;
      dropdownPanel?.classList.add('opacity-0', 'invisible', '-translate-y-2');
      dropdownPanel?.classList.remove('opacity-100', 'visible', 'translate-y-0');
      dropdownArrow?.classList.remove('rotate-180');
      dropdownBtn?.setAttribute('aria-expanded', 'false');
    }
  }
  
  dropdownBtn?.addEventListener('click', toggleDropdown);
  
  const verTodosBtn = document.getElementById('ver-todos-btn');
  verTodosBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    if (!isOpen) toggleDropdown();
  });
  
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (!target.closest('#pueblo-selector')) closeDropdown();
  });
  
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeDropdown();
  });
  
  searchInput?.addEventListener('input', (e) => {
    const searchTerm = (e.target as HTMLInputElement).value.toLowerCase().trim();
    let hasResults = false;
    
    puebloItems.forEach((item) => {
      const nombre = item.getAttribute('data-nombre') || '';
      const comarca = item.getAttribute('data-comarca') || '';
      const matches = nombre.includes(searchTerm) || comarca.includes(searchTerm);
      
      if (matches) {
        (item as HTMLElement).style.display = '';
        hasResults = true;
      } else {
        (item as HTMLElement).style.display = 'none';
      }
    });
    
    comarcaSections.forEach((section) => {
      const visibleItems = section.querySelectorAll('.pueblo-item:not([style*="display: none"])');
      (section as HTMLElement).style.display = visibleItems.length > 0 ? '' : 'none';
    });
    
    if (noResults) noResults.style.display = hasResults ? 'none' : 'block';
  });
