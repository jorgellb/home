---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

const musicCategories = [
  {
    title: "Producción & Composición (PVP)",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>`,
    description: "Creación musical desde cero. Del papel al master final.",
    items: [
      { name: "Canción Personalizada (Letra + Música)", price: "450€" },
      { name: "Producción de Single (Full Arranger)", price: "600€" },
      { name: "Beat / Instrumental Exclusiva", price: "250€" },
      { name: "Grabación de Voces (Sesión 3h)", price: "120€" },
      { name: "Arreglos & Orquestación", price: "300€" },
      { name: "Composición Banda Sonora (Corto)", price: "800€" }
    ]
  },
  {
    title: "Audio Branding & Jingles",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"/><path d="M19 10v2a7 7 0 0 1-14 0v-2"/></svg>`,
    description: "La identidad sonora que hace que tu marca sea inconfundible.",
    items: [
      { name: "Audio Logo (Identidad Sonora)", price: "250€" },
      { name: "Jingle Publicitario (Radio/TV)", price: "400€" },
      { name: "Música Corporativa a medida", price: "350€" },
      { name: "Pack 10 Cuñas de Radio", price: "600€" },
      { name: "Locución Profesional (Spot)", price: "90€" }
    ]
  },
  {
    title: "Mezcla & Masterización",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="4" y="4" width="16" height="16" rx="2"/><path d="M9 9h6M9 12h6M9 15h6"/></svg>`,
    description: "Tratamiento técnico de audio para alcanzar estándares de la industria.",
    items: [
      { name: "Mezcla Multitrack Pro (Canción)", price: "180€" },
      { name: "Masterización (Streaming Ready)", price: "60€" },
      { name: "Restauración de Audio (Limpieza)", price: "45€/h" },
      { name: "Edición de Voces (AutoTune/Melodyne)", price: "50€" },
      { name: "Stem Mastering", price: "100€" }
    ]
  },
  {
    title: "Podcast & Contenido",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"/><path d="M19 10v2a7 7 0 0 1-14 0v-2"/></svg>`,
    description: "Servicios integrales para creadores de contenido sonoro.",
    items: [
      { name: "Edición Podcast (Episodio < 60min)", price: "80€" },
      { name: "Pack 4 Episodios (Mantenimiento)", price: "280 €" },
      { name: "Intro & Outro Exclusiva Podcast", price: "150€" },
      { name: "Grabación In-Situ (Equipo Movil)", price: "120€" },
      { name: "Asesoría Técnica Estudio", price: "60€" }
    ]
  }
];
---

<BaseLayout
  title="Estudio de Música y Sonido en Almería | Producción y Podcast Pro"
  description="Producción musical profesional en Almería. Composición de canciones, jingles publicitarios, mezcla, mastering y edición de podcasts. Calidad de estudio de grabación."
  jsonLd={{
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Producción Musical y Sonido",
    "provider": {
      "@type": "Organization",
      "name": "Platanito Rico",
      "url": "https://platanitorico.com"
    },
    "description": "Estudio de grabación, composición musical y edición de audio profesional en Almería.",
    "areaServed": {
      "@type": "State",
      "name": "Almería"
    },
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Catálogo de Producción Musical",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Composición de Canción Personalizada"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Edición de Podcasts"
          }
        }
      ]
    }
  }}
>
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden py-24">
      <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-teal-100 via-white to-slate-50"></div>
      
      <div class="container-premium relative z-10 text-center">
        <div class="badge-premium mb-8 inline-flex animate-fade-up">
          <span class="text-teal-400 font-bold uppercase tracking-[0.2em] text-[10px]">Pure Sound Experience</span>
        </div>
        <h1 class="heading-display mb-8 animate-fade-up stagger-1">
          La banda sonora de
          <span class="block text-gradient mt-2">Tu éxito empresarial</span>
        </h1>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto mb-12 animate-fade-up stagger-2 leading-relaxed">
          Somos tu <strong>estudio de producción musical en Almería</strong>. Convertimos ideas en ondas sonoras de alta fidelidad, desde podcasts virales hasta jingles inconfundibles.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-6 animate-fade-up stagger-3">
            <a href="#catalogo" class="btn-premium px-12 !bg-teal-600 hover:!bg-teal-700">Explorar Tarifas</a>
            <a href="#packs" class="btn-premium !bg-emerald-500/10 !border-emerald-500/20 !text-emerald-400 px-12">Packs Audio Total</a>
        </div>
      </div>
    </section>

    <!-- SEO & Audio Authority Section -->
    <section class="py-24 bg-slate-50 relative">
        <div class="container-premium">
            <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-3xl font-black text-slate-900 mb-8">Ingeniería de <span class="text-teal-400">Sonido Avanzada</span> en Almería</h2>
                <p class="text-slate-600 text-lg leading-relaxed mb-12">
                   En Platanito Rico fusionamos creatividad y técnica. Ya sea un <strong>podcast corporativo</strong>, una cuña publicitaria o la producción artística de un álbum, aplicamos estándares de calidad de estudio profesional (EBU R128, LUFS) para que tu marca suene en todas partes.
                </p>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    {["Producción", "Mix & Master", "Podcast", "Audio Branding"].map(tag => (
                        <div class="p-4 rounded-xl bg-slate-100 border border-slate-200 text-xs font-bold text-slate-500 uppercase tracking-widest">{tag}</div>
                    ))}
                </div>
            </div>
        </div>
    </section>

    <!-- Complete Catalog -->
    <section id="catalogo" class="section-premium relative">
      <div class="container-premium">
        <div class="text-center mb-24">
            <h2 class="text-5xl font-black text-slate-900 mb-6">Catálogo de <span class="text-gradient">Servicios Sonoros</span></h2>
            <p class="text-slate-500 max-w-2xl mx-auto italic">
                Precios por obra finalizada o sesión según categoría. Grabaciones externas sujetas a presupuesto adicional por desplazamiento.
            </p>
        </div>

        <div class="space-y-32">
            {musicCategories.map((cat, idx) => (
                <div class="animate-fade-up" style={`animation-delay: ${idx * 0.1}s`}>
                    <div class="flex items-center gap-6 mb-12">
                        <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-teal-500 to-emerald-600 p-0.5 shadow-lg shadow-teal-500/20">
                            <div class="w-full h-full rounded-[14px] bg-slate-50 flex items-center justify-center">
                                <div class="w-8 h-8 text-slate-900" set:html={cat.icon} />
                            </div>
                        </div>
                        <div>
                            <h3 class="text-3xl font-black text-slate-900 mb-2">{cat.title}</h3>
                            <p class="text-slate-500">{cat.description}</p>
                        </div>
                    </div>

                    <div class="grid md:grid-cols-2 gap-x-12 gap-y-4">
                        {cat.items.map(item => (
                            <div class="flex justify-between items-center py-4 border-b border-slate-100 group hover:bg-slate-100 px-4 rounded-lg transition-all">
                                <span class="text-sm text-slate-600 group-hover:text-slate-900 transition-colors">{item.name}</span>
                                <div class="flex items-center gap-4">
                                    <span class="text-xs font-bold text-slate-400 uppercase tracking-widest">Desde</span>
                                    <span class="text-lg font-black text-slate-900">{item.price}</span>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            ))}
        </div>
      </div>
    </section>

    <!-- Music & Audio Packs -->
    <section id="packs" class="section-premium bg-slate-50 border-t border-slate-100 relative overflow-hidden">
        <div class="absolute inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-teal-500/20 to-transparent"></div>
        
        <div class="container-premium text-center mb-24">
            <div class="badge-premium mb-6 bg-emerald-500/10 !text-emerald-400 !border-none">Premium Studio Plans</div>
            <h2 class="text-5xl font-black text-white mb-6">Packs de <span class="text-gradient">Audio Recurrente</span></h2>
            <p class="text-zinc-500 max-w-2xl mx-auto text-lg leading-relaxed">Externaliza tu producción sonora y garantiza una calidad constante en todos tus canales de comunicación.</p>
        </div>

        <div class="container-premium grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
             <!-- Pack Podcast Master -->
            <div class="gradient-border-card group relative">
                <div class="gradient-border-card-inner p-12 flex flex-col h-full bg-white relative">
                    <h4 class="text-slate-400 uppercase font-black tracking-tighter mb-4 text-sm">Pack Podcast Creator</h4>
                    <div class="text-6xl font-black text-slate-900 mb-2">320€ <span class="text-lg text-slate-400 font-bold">/ mes</span></div>
                    <p class="text-emerald-400 text-xs font-bold mb-10 uppercase tracking-widest italic">Ideal para Podcast Semanal</p>
                    
                    <ul class="space-y-6 mb-12 text-left flex-1 border-t border-white/10 pt-10">
                        {[
                            "Edición de 4 Episodios Mensuales",
                            "Limpieza de Ruido & EQ Pro",
                            "Música In/Out y Ráfagas",
                            "Subida a Spotify/Apple/iVoox",
                            "Asesoría de Guion & SEO"
                        ].map(li => (
                            <li class="flex items-start gap-4 text-sm text-slate-600 italic">
                                <div class="w-5 h-5 rounded-full bg-emerald-500/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                                    <svg class="w-3 h-3 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="4"><path d="M5 13l4 4L19 7"/></svg>
                                </div>
                                {li}
                            </li>
                        ))}
                    </ul>
                    <a href="/#contacto" class="btn-premium !py-4 w-full !bg-teal-600 hover:!bg-teal-700">Contratar Creator</a>
                </div>
            </div>

            <!-- Pack Sonic Identity VIP -->
            <div class="gradient-border-card group">
                <div class="gradient-border-card-inner p-12 flex flex-col h-full bg-white relative border-teal-500/20">
                    <div class="absolute -top-4 right-8 bg-teal-600 text-white text-[10px] font-black px-5 py-2 rounded-full shadow-lg shadow-teal-600/30">BRANDING TOTAL</div>
                    <h4 class="text-teal-400 uppercase font-black tracking-tighter mb-4 text-sm">Audiologo & Sonic Branding</h4>
                    <div class="text-6xl font-black text-slate-900 mb-2">750€ <span class="text-lg text-slate-400 font-bold">/ pago único</span></div>
                    <p class="text-emerald-400 text-xs font-bold mb-10 uppercase tracking-widest italic">Tu marca, ahora con sonido propio</p>
                    
                    <ul class="space-y-6 mb-12 text-left flex-1 border-t border-white/10 pt-10">
                        {[
                            "Diseño de Audio Logo Exclusivo",
                            "Jingle Principal (30s y 15s)",
                            "Manual de Identidad Sonora",
                            "Ráfagas para Vídeos / Reels",
                            "Música de Espera Telefónica",
                            "Cesión Total de Derechos"
                        ].map(li => (
                            <li class="flex items-start gap-4 text-sm text-slate-800">
                                <div class="w-5 h-5 rounded-full bg-teal-500/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                                    <svg class="w-3 h-3 text-teal-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="4"><path d="M5 13l4 4L19 7"/></svg>
                                </div>
                                {li}
                            </li>
                        ))}
                    </ul>
                    <a href="/#contacto" class="btn-premium !py-4 w-full bg-gradient-to-r from-teal-600 via-emerald-600 to-green-800 border-none shadow-xl shadow-teal-500/20">Activar Identidad Sonora</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact CTA -->
    <section id="contacto" class="section-premium text-center">
      <div class="container-premium">
        <div class="max-w-3xl mx-auto p-12 rounded-3xl bg-slate-50 border border-slate-100 backdrop-blur-md">
          <h2 class="text-3xl font-black text-white mb-6">¿Hacemos que suene?</h2>
          <p class="text-zinc-400 text-lg mb-8 italic">Desde una idea en una servilleta hasta una pieza de audio que emociona. Cuéntanos tu visión.</p>
          <a href="/#contacto" class="btn-premium px-12 group">
            <span class="flex items-center gap-2">
                Hablar con el Productor
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </span>
          </a>
        </div>
      </div>
    </section>

  </main>
  
  <Footer />
</BaseLayout>
