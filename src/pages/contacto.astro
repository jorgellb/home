<script is:inline>
  document.getElementById('callback-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    const name = document.getElementById('name').value.trim();
    const phone = document.getElementById('phone').value.trim();
    
    if (!name || !phone) {
      alert('Por favor, completa todos los campos.');
      return;
    }
    
    // Crear mensaje para WhatsApp
    const message = `Hola, soy ${name}. Mi teléfono es ${phone}. Me gustaría que me llaméis para hablar sobre vuestros servicios.`;
    const encodedMessage = encodeURIComponent(message);
    const whatsappUrl = `https://wa.me/34657085019?text=${encodedMessage}`;
    
    // Abrir WhatsApp
    window.open(whatsappUrl, '_blank');
  });
</script>
